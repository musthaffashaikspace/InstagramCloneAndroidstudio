<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/posttopid">
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="27dp"
            app:title="sample"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Small"
            app:menu="@menu/postmenutop"
            android:id="@+id/posttopbarid">

        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/posttopid"
        android:src="@drawable/srk1"
        android:id="@+id/imagepost"
        android:layout_marginTop="10dp"/>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/imagepost"
            android:backgroundTint="@color/white"
            app:menu="@menu/postmenubottom"
            android:layout_marginTop="10dp"
            tools:ignore="BottomAppBar"
            android:id="@+id/bottombarpost"
            />
        <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            app:menu="@menu/postsave"
            tools:ignore="BottomAppBar"
            android:layout_below="@id/imagepost"
            android:layout_alignParentRight="true"
            android:id="@+id/bottombarsave"
            />



</RelativeLayout>